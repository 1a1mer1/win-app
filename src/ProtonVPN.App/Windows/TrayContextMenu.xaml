<Window x:Class="ProtonVPN.Windows.TrayContextMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:ProtonVPN.ViewModels"
        xmlns:calcBinding="clr-namespace:CalcBinding;assembly=CalcBinding"
        xmlns:translations="clr-namespace:ProtonVPN.Translations;assembly=ProtonVPN.Translations"
        WindowStyle="None"
        ShowInTaskbar="False"
        ResizeMode="CanMinimize"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="TrayContextMenu"
        Topmost="True"
        d:DataContext="{d:DesignInstance viewModels:TrayNotificationViewModel}">
    <Border BorderBrush="#959595" Background="#f5f5f5" BorderThickness="1">
        <StackPanel Margin="2">
            <MenuItem Padding="0" Margin="0" Command="{Binding ConnectCommand}" Header="{translations:Loc App_mnu_Connect}" Visibility="{calcBinding:Binding CanConnect}"/>
            <MenuItem Command="{Binding DisconnectCommand}" Header="{translations:Loc App_mnu_Disconnect}" Visibility="{calcBinding:Binding CanDisconnect}"/>
            <MenuItem Command="{Binding ExitCommand}" Header="{translations:Loc App_mnu_Exit}"/>
        </StackPanel>
    </Border>
</Window>
