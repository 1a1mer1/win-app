<resource:BaseModalWindow x:Class="ProtonVPN.Modals.Trial.TrialEndModalView"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:icons="clr-namespace:ProtonVPN.Views.Icons"
                        xmlns:trial="clr-namespace:ProtonVPN.Modals.Trial"
                        xmlns:behavior="clr-namespace:ProtonVPN.Core.Wpf.Behavior"
                        xmlns:translations="clr-namespace:ProtonVPN.Translations;assembly=ProtonVPN.Translations"
                        xmlns:resource="clr-namespace:ProtonVPN.Resource;assembly=ProtonVPN.Resource"
                        Style="{StaticResource BaseModalStyle}"
                        SizeToContent="Height"
                        Title="{translations:Loc Trial_Expired_ttl}"
                        mc:Ignorable="d"
                        Height="Auto"
                        Width="800"
                        d:DataContext="{d:DesignInstance trial:TrialEndModalViewModel}">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" GradientStops="{StaticResource ModalBackground}"/>
        </Grid.Background>
        <StackPanel Margin="90,40">
            <TextBlock FontWeight="Medium"
                       Padding="15,0,15,25"
                       HorizontalAlignment="Center"
                       FontSize="30"
                       TextWrapping="Wrap"
                       Foreground="White"
                       behavior:TextStyleBehavior.FormattedText="{translations:Loc Trial_Expired_lbl_Header}">
            </TextBlock>
            <TextBlock Padding="15,15,15,0"
                       FontWeight="Medium"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       FontSize="18"
                       TextWrapping="Wrap"
                       LineHeight="30"
                       Foreground="White"
                       Text="{translations:Loc Trial_Expired_lbl_Expired}"/>

            <StackPanel HorizontalAlignment="Center" Margin="0,40">
                <DockPanel>
                    <icons:TimesCircle Width="20"/>

                    <Label Foreground="White" FontSize="18" Margin="8,0,0,0" FontWeight="Medium" Content="{translations:Loc Trial_Features_lbl_SecureCore}"/>
                </DockPanel>
                <DockPanel>
                    <icons:TimesCircle Width="20"/>
                    <Label Foreground="White" FontSize="18" Margin="8,0,0,0" FontWeight="Medium" Content="{translations:Loc Trial_Features_lbl_P2PServers}"/>
                </DockPanel>
                <DockPanel>
                    <icons:TimesCircle Width="20"/>
                    <Label Foreground="White" FontSize="18" Margin="8,0,0,0" FontWeight="Medium" Content="{translations:Loc Trial_Features_lbl_MultipleConnections}"/>
                </DockPanel>
                <DockPanel>
                    <icons:TimesCircle Width="20"/>
                    <Label Foreground="White" FontSize="18" Margin="8,0,0,0" FontWeight="Medium" Content="{translations:Loc Trial_Features_lbl_MultipleCountries}"/>
                </DockPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Style="{StaticResource SecondaryVividModalButton}"
                        Content="{translations:Loc Trial_Expired_btn_Close}"
                        Padding="20,0"
                        Command="{Binding CloseCommand}"/>
                <Button Style="{StaticResource PinkModalButton}"
                        Padding="20,0"
                        Command="{Binding UpgradeCommand}"
                        Content="{translations:Loc Trial_Expired_btn_Upgrade}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</resource:BaseModalWindow>
