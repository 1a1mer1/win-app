<modals:BaseModalWindow x:Class="ProtonVPN.Modals.Upsell.UpsellModalView"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:modals="clr-namespace:ProtonVPN.Modals"
                        xmlns:upsell="clr-namespace:ProtonVPN.Modals.Upsell"
                        xmlns:translations="clr-namespace:ProtonVPN.Translations;assembly=ProtonVPN.Translations"
                        Style="{StaticResource BaseModalStyle}"
                        SizeToContent="Height"
                        ResizeMode="NoResize"
                        Title="{translations:Loc Upsell_UpgradeRequired_ttl}"
                        mc:Ignorable="d"
                        Height="Auto"
                        Width="500"
                        d:DataContext="{d:DesignInstance upsell:UpsellModalViewModel}">
    <Grid>
        <StackPanel>
            <TextBlock TextWrapping="Wrap" FontSize="16" Foreground="White" Padding="15,40" 
                       Text="{translations:Loc Upsell_UpgradeRequired_msg_Upsell}"/>
            <DockPanel Background="{StaticResource ModalBarColor}" Height="66">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource SecondaryButton}"
                            Content="{translations:Loc Upsell_UpgradeRequired_btn_Close}"
                            Command="{Binding CloseCommand}"/>
                    <Button Style="{StaticResource PrimaryButton}"
                            Content="{translations:Loc Upsell_UpgradeRequired_btn_Upgrade}"
                            Command="{Binding ContinueCommand}"/>
                </StackPanel>
            </DockPanel>
        </StackPanel>
    </Grid>
</modals:BaseModalWindow>
