<resource:BaseModalWindow x:Class="ProtonVPN.Modals.Upsell.ScUpsellModalView"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                        xmlns:upsell="clr-namespace:ProtonVPN.Modals.Upsell"
                        xmlns:behavior="clr-namespace:ProtonVPN.Core.Wpf.Behavior"
                        xmlns:translations="clr-namespace:ProtonVPN.Translations;assembly=ProtonVPN.Translations"
                        xmlns:resource="clr-namespace:ProtonVPN.Resource;assembly=ProtonVPN.Resource"
                        Style="{StaticResource BaseWindowStyle}"
                        Title="{translations:Loc Upsell_UpgradeRequired_ttl}"
                        SizeToContent="Height"
                        mc:Ignorable="d"
                        Height="Auto"
                        Width="500"
                        d:DataContext="{d:DesignInstance upsell:ScUpsellModalViewModel}">
    <Grid>
        <StackPanel>
            <TextBlock TextWrapping="Wrap" FontSize="16" Foreground="White" Padding="15,40,10,0">
                <Run Text="{translations:Loc Upsell_UpgradeRequired_msg_SecureCore_1}"/>
            </TextBlock>
            <TextBlock TextWrapping="Wrap" FontSize="16" Foreground="White" Padding="15,8,10,0"
                       behavior:TextStyleBehavior.FormattedText="{translations:Loc Upsell_UpgradeRequired_msg_SecureCore_2}">
                <TextBlock.Resources>
                    <Style TargetType="Hyperlink">
                        <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                        <Setter Property="FontSize" Value="16"/>
                    </Style>
                </TextBlock.Resources>
            </TextBlock>
            <TextBlock FontSize="16" Foreground="White" TextWrapping="Wrap" Padding="15,8,10,40" 
                       Text="{translations:Loc Upsell_UpgradeRequired_msg_SecureCore_Upgrade}"/>
            <DockPanel Background="{StaticResource ModalBarColor}" Height="66">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource SecondaryButton}"
                            Content="{translations:Loc Upsell_UpgradeRequired_btn_Close}"
                            Command="{Binding CloseCommand}"/>
                    <Button Style="{StaticResource PrimaryButton}"
                            Content="{translations:Loc Upsell_UpgradeRequired_btn_Upgrade}"
                            Command="{Binding ContinueCommand}"/>
                </StackPanel>
            </DockPanel>
        </StackPanel>
    </Grid>
</resource:BaseModalWindow>
