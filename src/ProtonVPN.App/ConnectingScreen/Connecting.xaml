<UserControl x:Class="ProtonVPN.ConnectingScreen.Connecting"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:c="clr-namespace:CalcBinding;assembly=CalcBinding"
             xmlns:behavior="clr-namespace:ProtonVPN.Core.Wpf.Behavior"
             xmlns:controls="clr-namespace:ProtonVPN.Views.Controls"
             xmlns:wpf="clr-namespace:ProtonVPN.Core.Wpf"
             xmlns:connectingScreen="clr-namespace:ProtonVPN.ConnectingScreen"
             xmlns:translations="clr-namespace:ProtonVPN.Translations;assembly=ProtonVPN.Translations"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300"
             AutomationProperties.AutomationId="{StaticResource ConnectingScreenId}"
             d:DataContext="{d:DesignInstance connectingScreen:ConnectingViewModel}">
    <UserControl.Resources>
        <Style x:Key="ControlButton" TargetType="Button" BasedOn="{StaticResource ClearStyleButton}">
            <Setter Property="Margin" Value="0,30,0,0" />
            <Setter Property="Width" Value="120" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Border.CornerRadius" Value="20" />
            <Setter Property="BorderBrush" Value="White" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="White" />
                    <Setter Property="Foreground" Value="Black" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource ControlButton}">
            <Setter Property="Content" Value="{translations:Loc Connecting_btn_Cancel}" />
            <Setter Property="AutomationProperties.AutomationId" Value="{StaticResource CancelButtonId}" />
        </Style>
        <ControlTemplate x:Key="EllipseAnimationContent">
            <Grid>
                <Ellipse
                    x:Name="Ellipse1"
                    Height="100"
                    Width="100"
                    StrokeThickness="3"
                    Stroke="White" RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="ScaleTransform1" />
                            <RotateTransform Angle="-45" />
                        </TransformGroup>
                    </Ellipse.RenderTransform>
                </Ellipse>
                <Ellipse
                    x:Name="Ellipse2"
                    Height="100"
                    Width="100"
                    StrokeThickness="3"
                    Stroke="White" RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="ScaleTransform2" />
                            <RotateTransform Angle="45" />
                        </TransformGroup>
                    </Ellipse.RenderTransform>
                </Ellipse>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="Visibility" Value="Visible">
                    <Trigger.EnterActions>
                        <BeginStoryboard Name="EllipseStoryboard1">
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetName="ScaleTransform1"
                                    Storyboard.TargetProperty="ScaleX"
                                    From="1"
                                    To="0"
                                    Duration="0:0:1"
                                    AutoReverse="True"
                                    RepeatBehavior="Forever" />
                            </Storyboard>
                        </BeginStoryboard>
                        <BeginStoryboard Name="EllipseStoryboard2">
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetName="ScaleTransform2"
                                    Storyboard.TargetProperty="ScaleX"
                                    From="1"
                                    To="0"
                                    Duration="0:0:1"
                                    AutoReverse="True"
                                    RepeatBehavior="Forever" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <RemoveStoryboard BeginStoryboardName="EllipseStoryboard1" />
                        <RemoveStoryboard BeginStoryboardName="EllipseStoryboard2" />
                    </Trigger.ExitActions>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </UserControl.Resources>
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <ContentControl Template="{StaticResource EllipseAnimationContent}" />
            <ProgressBar Margin="0,40,0,0" Width="300"
                         SnapsToDevicePixels="True"
                         Minimum="0"
                         Maximum="100"
                         Background="White"
                         Height="2"
                         Foreground="{StaticResource PrimaryColor}"
                         Value="{Binding Percentage}">
                <i:Interaction.Behaviors>
                    <behavior:AnimateBehavior ToAnimate="{x:Static ProgressBar.ValueProperty}"
                                              Value="{Binding AnimatePercentage}" Duration="0.5" />
                </i:Interaction.Behaviors>
            </ProgressBar>
            <Label HorizontalAlignment="Center"
                   Content="{Binding Message}"
                   Foreground="White"
                   Height="32" />
            <wpf:AlignableWrapPanel HorizontalAlignment="Center"
                                    Margin="0,20,0,0"
                                    HorizontalContentAlignment="Center"
                                    Visibility="{Binding Reconnecting, Converter={StaticResource BoolToVis}}">
                <TextBlock Padding="0"
                           Text="{translations:Loc Connecting_lbl_FailedConnection_1}"
                           FontSize="16"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Visibility="{c:Binding '!FailedConnectionName.IsSecureCore'}" />
                <TextBlock Padding="0"
                           Text="{translations:Loc Connecting_lbl_FailedConnection_1_SecureCore}"
                           FontSize="16"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Visibility="{c:Binding 'FailedConnectionName.IsSecureCore'}" />
                <controls:ServerName FontWeight="Bold"
                                     FontSize="16"
                                     Margin="5,3"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     WrapElements="True"
                                     AlignCenter="True"
                                     ConnectionName="{Binding FailedConnectionName}" />
                <TextBlock Padding="0"
                           Text="{translations:Loc Connecting_lbl_FailedConnection_2}"
                           FontSize="16"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Visibility="{c:Binding '!FailedConnectionName.IsSecureCore'}" />
                <TextBlock Padding="0"
                           Text="{translations:Loc Connecting_lbl_FailedConnection_2_SecureCore}"
                           FontSize="16"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Visibility="{c:Binding 'FailedConnectionName.IsSecureCore'}" />
            </wpf:AlignableWrapPanel>
            <wpf:AlignableWrapPanel HorizontalAlignment="Center" 
                                    Margin="0,5,0,0" 
                                    HorizontalContentAlignment="Center"
                                    Visibility="{Binding IsConnectionNameNotNull, Converter={StaticResource BoolToVis}}">
                <TextBlock Padding="0"
                           TextTrimming="CharacterEllipsis"
                           Text="{translations:Loc Connecting_lbl_ConnectingTo_1}"
                           FontSize="20"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Visibility="{c:Binding '!ConnectionName.IsSecureCore'}" />
                <TextBlock Padding="0"
                           TextTrimming="CharacterEllipsis"
                           Text="{translations:Loc Connecting_lbl_ConnectingTo_1_SecureCore}"
                           FontSize="20"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Visibility="{c:Binding 'ConnectionName.IsSecureCore'}" />
                <controls:ServerName FontWeight="Bold"
                                     FontSize="20" Margin="7,5"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     WrapElements="True"
                                     AlignCenter="True"
                                     ConnectionName="{Binding ConnectionName}" />
                <TextBlock Padding="0"
                           TextTrimming="CharacterEllipsis"
                           Text="{translations:Loc Connecting_lbl_ConnectingTo_2}"
                           FontSize="20"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Visibility="{c:Binding '!ConnectionName.IsSecureCore'}" />
                <TextBlock Padding="0"
                           TextTrimming="CharacterEllipsis"
                           Text="{translations:Loc Connecting_lbl_ConnectingTo_2_SecureCore}"
                           FontSize="20"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Visibility="{c:Binding 'ConnectionName.IsSecureCore'}" />
            </wpf:AlignableWrapPanel>
            <Button Style="{StaticResource CancelButton}" Command="{Binding DisconnectCommand}" />
        </StackPanel>
    </Grid>
</UserControl>